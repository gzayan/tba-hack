<!--
FIXME: FOR REGISTRATION
1. Name
2. Email
3. Password
4. Account Number
5. Currency codes:
- USD (America)
- CAD (Canada)
- THB (Thailand)
- EUR (Euro)
-->

<h1>Register</h1>
<% if (messages.error) { %>
  <%= messages.error %>
<% } %>
<form action="/register" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" required>
  </div>
  <br>
  <div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required>
  </div>
  <br>
  <div>
    <label for="password">Password</label>
    <input type="password" id="password" name="password" required>
  </div>
  <br>
  <div>
    <label for="accountnumber">Account Number</label>
    <input type="accountnumber" id="accountnumber" name="accountnumber" required>
    <label for="accountnumber">(must be 16 characters)</label>
  </div>
  <br>
  <div>
    <label for="currencycode">Currency Code</label>
    <input type="currencycode" id="currencycode" name="currencycode" required>
    <label for="currencycode">options are: USD, CAD, THB EUR</label>
  </div>
  <br>
  <button type="submit">Register</button>
</form>
<a href="/login">Login</a>